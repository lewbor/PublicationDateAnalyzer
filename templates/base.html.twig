<!doctype html>
<html lang="ru">
<head>
    <title>{% block title %}{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/styles.css') }}"/>
    {% endblock %}

    {% block javascripts %}
        <script src="{{ asset('assets/manifest.js') }}"></script>
        <script src="{{ asset('assets/vendor.js') }}"></script>
        <script src="{{ asset('assets/app.js') }}"></script>
        <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>

    {% endblock %}
</head>

<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">
    {% block body %}

        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <div class="sidebar">
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" role="menu" data-accordion="false">
                        <li class="nav-item has-treeview menu-open">
                            <a href="/" class="nav-link active">
                                <i class="nav-icon fas fa-tachometer-alt"></i>
                                <p>
                                    Список журналов
                                    <i class="right fas fa-angle-left"></i>
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </aside>

        <div class="content-wrapper">
            {% block content %}{% endblock %}
        </div>

        <footer class="main-footer">
            <strong>Copyright &copy; 2019 <a href="http://catalysis.ru">BIC RAS</a>.</strong> All rights reserved.
        </footer>

    {% endblock %}
</div>
</body>
</html>
